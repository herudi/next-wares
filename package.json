{
  "name": "next-wares",
  "version": "0.0.1",
  "description": "Tiny middleware-helper for nextjs (app-router).",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "test": "tsx --test ./tests/*",
    "format": "prettier --write \"src/*{.ts,.tsx,.js}\"",
    "format:check": "prettier --check \"src/*{.ts,.tsx,.js}\"",
    "build": "rimraf dist && tsc && tsc --project tsconfig.esm.json && node ./scripts/pkg.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/herudi/next-wares.git"
  },
  "bugs": {
    "url": "https://github.com/herudi/next-wares/issues"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "NextJS",
    "Next App Router",
    "Next Middlewares"
  ],
  "author": "Herudi",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.8.7",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
